{{#each model as |post|}}
  <div class="row">
    <div class="col">
      <article>
        <h2>{{post.title}}</h2>
        <time class="text-muted"
              datetime="{{moment-format post.created_at}}">
          {{utc post.created_at}}
        </time>
        <p>{{post.lead}}</p>
        {{#link-to "posts.show" post}}More{{/link-to}}
      </article>
    </div>
  </div>
{{/each}}